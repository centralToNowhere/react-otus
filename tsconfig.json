{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": [
      "es2019",
      "DOM"
    ],
    "moduleResolution": "node",
    "target": "ES2015",
    "allowJs": true,
    "isolatedModules": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "outDir": "./build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*"]
}
